{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2016", "dom"],
    "outDir": "./dist",
    "pretty": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/*"],
      "@data/*": ["packages/data/*"],
      "@ui/*": ["packages/ui/*"],
      "@event/*": ["packages/event/*"],
      "@network/*": ["packages/network/*"],
      "@hooks/*": ["packages/hooks/*"],
      "@lib/*": ["packages/lib/*"]
    }
  },
  "exclude": ["node_modules", "**/__tests__/*", "example", "dist"]
}
