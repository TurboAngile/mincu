{
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "noCi": true,
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "message": ":bookmark: release: publish %s",
      "registry": "https://registry.npmjs.org/"
    }
  },
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "2.0.0-alpha.2"
}
