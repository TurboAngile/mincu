{
  "name": "mincu",
  "version": "2.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "preconstruct watch",
    "build": "preconstruct build",
    "postinstall": "lerna bootstrap",
    "prettier": "pretty-quick",
    "lint": "eslint -f unix \"packages/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-export-namespace-from": "^7.14.5",
    "@babel/preset-env": "^7.14.9",
    "@babel/preset-typescript": "^7.14.5",
    "@preconstruct/cli": "^2.1.5",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "husky": "3",
    "lerna": "^4.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.1",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "globals": {
    "__DEV__": true,
    "__TEST__": true,
    "ts-jest": {
      "useBabelrc": true
    }
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "example/*"
    ],
    "nohoist": [
      "**/next"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
