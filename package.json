{
  "name": "mincu-monorepo",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "preconstruct build",
    "build:debug-tools": "pnpm run build --filter mincu-debug-tools",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint -f unix \"packages/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "prettier": "pretty-quick",
    "dev": "preconstruct dev",
    "start": "preconstruct watch",
    "start:debug-tools": "pnpm run dev --filter mincu-debug-tools",
    "test:example": "ts-node ./tests/run_example_scripts.ts",
    "postinstall": "lerna bootstrap",
    "release": "lerna publish --force-publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@preconstruct/cli": "^2.1.5",
    "@types/node": "^14.18.12",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "execa": "^5.1.1",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.6.1",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "globals": {
    "__DEV__": true,
    "__TEST__": true,
    "ts-jest": {
      "useBabelrc": true
    }
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
