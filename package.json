{
  "name": "mincu-monorepo",
  "private": true,
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "preconstruct build",
    "build:debug-tools": "pnpm run build --filter mincu-debug-tools",
    "lint": "eslint -f unix \"packages/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "prettier": "pretty-quick",
    "start": "preconstruct watch",
    "test:example": "ts-node ./tests/run_example_scripts.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@changesets/cli": "^2.19.0",
    "@preconstruct/cli": "^2.1.5",
    "@types/node": "^14.18.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "execa": "^5.1.1",
    "husky": "^7.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.2",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "globals": {
    "__DEV__": true,
    "__TEST__": true,
    "ts-jest": {
      "useBabelrc": true
    }
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
